<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:layout_margin="2dp"
    android:background="@drawable/backbutton"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/backbutton"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/toureditimg"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"></ImageView>

        <TextView
            android:id="@+id/editplacetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/toureditimg"
            android:text="This is Demo Name"

            android:fontFamily="@font/rubik"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/edithoteltext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editplacetext"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/rubik"
            android:layout_toRightOf="@id/toureditimg"
            android:text="This is Course Name"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/editduratext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edithoteltext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/toureditimg"
            android:text="This is Email Name"
            android:fontFamily="@font/rubik"

            android:textSize="15dp" />
        <TextView
            android:id="@+id/editcosttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editduratext"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/rubik"
            android:layout_toRightOf="@id/toureditimg"
            android:text="This is Email Name"

            android:textSize="15dp" />
        <ImageView
            android:id="@+id/editic"
            android:src="@drawable/editic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/editcosttext"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/toureditimg"
            ></ImageView>
        <ImageView
            android:id="@+id/delic"
            android:src="@drawable/delicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/editcosttext"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/editic"
            ></ImageView>




    </RelativeLayout>


</androidx.cardview.widget.CardView>

