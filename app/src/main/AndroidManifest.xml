            android:exported="false"
            android:theme="@style/Theme.TriphutAgent.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".EditOrUpdate.EditTour"
            android:exported="false"
            android:theme="@style/Theme.TriphutAgent.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".TourView"
            android:exported="false"
            android:theme="@style/Theme.TriphutAgent.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".View"
            android:exported="false"
            android:theme="@style/Theme.TriphutAgent.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".TourHome"
            android:exported="false"
            android:theme="@style/Theme.TriphutAgent.NoActionBar"
