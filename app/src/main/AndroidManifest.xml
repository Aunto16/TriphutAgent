        <activity
            android:name=".register"
            android:exported="false"
            android:theme="@style/Theme.TriphutAgent.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Home"
            android:exported="false"
            android:theme="@style/Theme.TriphutAgent.NoActionBar"
